<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scaleType="fitXY"
    android:id="@+id/relativeLayout0"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayGame" >
    <TextView 
    	android:id="@+id/textView1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentRight="true"
    	android:textColor="@android:color/white"
    	android:textSize="20sp"
        />
   
<RelativeLayout 
	    android:id="@+id/relativeLayout1a"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below = "@+id/textView1">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
      >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"            
            android:background="@android:color/transparent"
            android:src="@drawable/black" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_below="@+id/imageButton1"
           
            android:background="@android:color/transparent"
            android:src="@drawable/white" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton3"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />      

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/imageButton1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            
            android:background="@android:color/transparent"
            android:src="@drawable/black" />

        <ImageButton
            android:id="@+id/imageButton2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageButton1b"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />

        <ImageButton
            android:id="@+id/imageButton3b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2b"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />
        <ImageButton
            android:id="@+id/imageButton4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton3b"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />      

    </RelativeLayout>
 <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/imageButton1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
           
            android:background="@android:color/transparent"
            android:src="@drawable/black" />

        <ImageButton
            android:id="@+id/imageButton2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageButton1c"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />

        <ImageButton
            android:id="@+id/imageButton3c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2c"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />
        <ImageButton
            android:id="@+id/imageButton4c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton3c"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />      

    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relativeLayout3"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/imageButton1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/black" />

        <ImageButton
            android:id="@+id/imageButton2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageButton1d"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />

        <ImageButton
            android:id="@+id/imageButton3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2d"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />
        <ImageButton
            android:id="@+id/imageButton4d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton3d"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/white" />      

    </RelativeLayout>

     
 </RelativeLayout>   
</RelativeLayout>
